<section id='modalcontent'>
 <div class="modal fade bd-example-modal-xl" id="myModal" role="dialog">
    <div class="modal-dialog modal-xl ">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header" style="padding:35px 50px;">
          <h4 style="font-family: Courier New;font-weight: bold;text-align:center;margin-left: 30%">
            HURRY UP & BOOK NOW
            
          </h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          
        </div>
        <div class="modal-body" style="padding:40px 50px;background-color: rgb(255, 255, 204)">
      <div class='row'>
         <div class='col-lg-8'>
          <form action='/booknow' method="post">
            <div >
               <label for="usrname" style='font-weight: bold;'><i class="fa fa-user icon" style="color:red;background-color: white"></i> Enter Your Name</label>
               <input type="text" name="username" id="username" placeholder="Enter name" required autofocus>
            </div>
            <div >
               <label for="contact" style='font-weight: bold;'><i class="fa fa-user icon" style="color:red;background-color: white"></i> Enter Your Contact</label>
               <input type="text" name="contact" id="contact" placeholder="Enter contact" required autofocus>
            </div>
            
            <div class="form-group">
               <label for="sleeer" style='font-weight: bold;'><i class="fa fa-user icon" style="color:red;background-color: white"></i> Enter No Of Sleeper seat</label>
               <input type="number" name="sleeper" id="sleeper"   min="0" max="<%=avlsleepers%>" required autofocus >
            </div>

            <div class="form-group">
               <label for="sleeer" style='font-weight: bold;'><i class="fa fa-user icon" style="color:red;background-color: white"></i> Enter No Of Window seat</label>
               <input type="number" name="window" id="window"  min="0" max="<%=avlwindowseats%>" required autofocus>
            </div>
            <input type='hidden' name="arrivaldate" value="<%=arrivaldate%>">
            <input type='hidden' name="from" value="<%=from%>">
            <input type='hidden' name="to" value="<%=to%>">
            <input type='hidden' name="busname" value="<%=name%>">
            <input type="hidden" name="slcost" value="<%=slcost%>">
            <input type="hidden" name="wincost" value="<%=wincost%>">
            <input type="hidden" name="nonwincost" value="<%=nonwincost%>">

            <div class="form-group">
               <label for="sleeper" style='font-weight: bold;'><i class="fa fa-user icon" style="color:red;background-color: white"></i> Enter No Of Non-Window seat</label>
               <input type="number" name="nonwindow" id="nonwindow"  min="0" max="<%=avlnonwindowseats%>" required autofocus>
            </div>
             
             <label for="sleeer" style='font-weight: bold;'>Enter Payment mode</label> 
               <div class="form-check">
                  <label class="form-check-label">
                     <input type="radio"  name="radio" id="radio" value="cashondelivery" required autofocus>Cash ON Delivery
                  </label>
              </div>
              <div class="form-check">
                 <label class="form-check-label">
                     <input type="radio"  name="radio" id="radio" value="onlineypayment" required autofocus>Onine Payment
                </label>
              </div>
            
           
              <button type="submit" class="btn btn-success btn-block" onclick="login()" style='background-color: rgb(51, 51, 0)'>BOOK NOW</button>

          </form>
        </div>

           <div class='col-lg-4'>
             
           </div>
        </div>
        </div>
        
      </div>
      
    </div>
