<script>
    function verify() {
       email=$("#email").val();
       otp=$("#otp").val();

       $.post('/cutomer_verification',{email:email,otp:otp},function(data){
          if(data==="notfound")
          {
            alert('sorry yet this email is not registered');
          }
          else if(data==='notmatched')
          {
            alert("Wrong OTP!!!")
          }
          else if(data==='success')
          {
            window.location.href='/';
          }
       })
    }

</script>
